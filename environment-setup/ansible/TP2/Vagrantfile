# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
  config.vm.provider "virtualbox" do |v|
    v.memory = 8192
    v.cpus = 5
  end


  config.vm.define "cloud" do |cloud|
    cloud.vm.box = "debian/bullseye64"
    config.vm.network "private_network", ip: "172.30.1.5"
    config.vm.network "forwarded_port", guest: 30443, host: 30443
    config.vm.network "forwarded_port", guest: 30080, host: 30080
    config.vm.network "forwarded_port", guest: 31443, host: 31443
    config.vm.network "forwarded_port", guest: 31080, host: 31080

    
    cloud.vm.provision "ansible" do |ansible|
      ansible.playbook = "playbook-tp2.yml"
      ansible.extra_vars = { "ansible_ssh_user": 'vagrant'}
    end
  end
  
end
